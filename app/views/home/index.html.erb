<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog form-width" role="document">
    <div class="modal-content">
      <div class="modal-body form-edited">
        <section id="form">
          <h1>Swordfish Questionnaire</h1>
          <h2 id="form-info-text">Let us get a little information from you first</h2>
          <%= render partial: "partials/request_form", locals: {request: new_request_form}  %>
        </section>
      </div>
    </div>
  </div>
</div>

  <section class="form-call-to-action">
    <div class="strainer-image">
      <div class="form-call-out-text">
        <h2 id="booking-text">Book your event today</br><span class="break-text">Fill out our questionnaire and we will get in touch with you</span></h2>
        <button class="form-button" data-toggle="modal" data-target="#myModal">GET STARTED</button>
      </div>
    </div>
  </section>
</div>


  <section class="footer">
    <h2 class="company-text">SWORDFISH COCKTAILS</h2>
    <p class="event-text">EVENTS</br>PRIVATE PARTIES</p>
    <a href="http://www.instagram.com/swordfishcocktails"><%= image_tag("fa-instagram.png", :class => "instagram") %></a>
    <p class="email">info@swordfishcocktails.com</p>
  </section>
</div> <!-- container-fluid -->
