<%= simple_form_for(request, html: { class: 'form-horizontal' }, wrapper_mappings: {collection_radio_buttons: :vertical_radio_and_checkboxes}) do |f|  %>
  <div class="row">
    <div class="col-md-4 col-md-offset-2 form-padding">
      <%= f.input :name, label: false, placeholder: "NAME" %>
    </div>
    <div class="col-md-4 form-padding">
      <%= f.input :email, label: false, placeholder: "EMAIL" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2 form-padding">
      <%= f.input :phone_number, label: false, placeholder: "PHONE NUMBER" %>
    </div>
    <div class="col-md-4 form-padding">
      <%= f.input :city_state, label: false, placeholder: "CITY, STATE" %>
    </div>
  </div>
  <hr>
  <h2 id="form-info-text">What is the date of your party?</h2>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 form-padding">
      <%= f.input :event_date, as: :string, label: false , placeholder: "MM/DD"%>
    </div>
  </div>
  <hr>
  <h2 id="form-info-text">How many estimated guests are attending?</h2>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="input-center">
        <label for="request_no_of_guests_10"><input type="radio" value="10" name="request[no_of_guests]" id="request_no_of_guests_10"><label class="collection_radio_buttons guests" for="request_no_of_guests_10">10</label></label>
      </div>
    </div>
    <div class="col-md-4">
      <div class="input-center">
        <label for="request_no_of_guests_20"><input type="radio" value="20" name="request[no_of_guests]" id="request_no_of_guests_20"><label class="collection_radio_buttons guests" for="request_no_of_guests_20">20</label></label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="input-center">
        <label for="request_no_of_guests_30"><input type="radio" value="30" name="request[no_of_guests]" id="request_no_of_guests_30"><label class="collection_radio_buttons guests" for="request_no_of_guests_30">30</label></label>
      </div>
    </div>
    <div class="col-md-4">
      <div class="input-center">
        <label for="request_no_of_guests_40"><input type="radio" value="40" name="request[no_of_guests]" id="request_no_of_guests_40"><label class="collection_radio_buttons guests" for="request_no_of_guests_40">40</label></label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="input-center">
        <label for="request_no_of_guests_50"><input type="radio" value="50+" name="request[no_of_guests]" id="request_no_of_guests_50"><label class="collection_radio_buttons guests" for="request_no_of_guests_50">50+</label></label>
      </div>
    </div>
  </div>

  <hr>
  <h2 id="form-info-text">How many drinks would you like on your custom menu?</h2>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="input-center">
        <label for="request_no_of_drinks_3"><input type="radio" value="3" name="request[no_of_drinks]" id="request_no_of_drinks_3"><label class="collection_radio_buttons drinks" for="request_no_of_drinks_3">3</label></label>
      </div>
    </div>
    <div class="col-md-4">
      <div class="input-center">
        <label for="request_no_of_drinks_5"><input type="radio" value="5" name="request[no_of_drinks]" id="request_no_of_drinks_5"><label class="collection_radio_buttons drinks" for="request_no_of_drinks_5">5</label></label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="input-center">
        <label for="request_no_of_drinks_7"><input type="radio" value="7" name="request[no_of_drinks]" id="request_no_of_drinks_7"><label class="collection_radio_buttons drinks" for="request_no_of_drinks_7">7</label></label>
      </div>
    </div>
    <div class="col-md-4">
      <div class="input-center">
        <label for="request_no_of_drinks_10"><input type="radio" value="10+" name="request[no_of_drinks]" id="request_no_of_drinks_10"><label class="collection_radio_buttons drinks" for="request_no_of_drinks_10">10+</label></label>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-4 col-md-offset-2 form-padding">
      <%= f.input :over_21, as: :boolean, label: false %>
    </div>
  </div>
<!--   <div class="row">
    <div class="col-md-4 col-md-offset-2 form-padding">
      <%= f.input :terms_and_agreement, as: :boolean, label: false %>
    </div>
  </div> -->
  <%= f.button :submit, 'SUBMIT', :class => 'form-submit' %>
<% end %>
